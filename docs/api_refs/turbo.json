{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build:scripts": {
      "outputs": ["public/**"],
      "dependsOn": [
        "@langchain/openai#build",
        "@langchain/anthropic#build",
        "langchain#build"
      ]
    },
    "build:next": {
      "outputs": [".next/**", ".vercel/**"],
      "dependsOn": ["build:scripts"]
    }
  }
}
