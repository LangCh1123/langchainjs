{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "prebuild": {
      "dependsOn": ["@langchain/openai#build", "@langchain/anthropic#build", "langchain#build"]
    },
    "build:scripts": {
      "outputs": ["public/**"],
      "dependsOn": ["prebuild"]
    },
    "build:next": {
      "outputs": [".next/**", ".vercel/**"],
      "dependsOn": ["build:scripts"]
    }
  }
}
